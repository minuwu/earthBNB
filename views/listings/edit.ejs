<% layout("layouts/boilerplate") %>
<% block("head").append(`<title>Edit Listing -WanderLust</title>`)%>
<body>
    <br><br>
    <div class="row">
        <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="col-md-8 offset-md-2 mb-5">
                <h2>Edit this listing</h2>
                <div class="mb-3">
                    <label for="title" class= "form-label"  >Listing Name</label>
                    <input  required class= "form-control" id="title"  name="listing[title]" type="text" value = "<%= listing.title %>">
                    <div class="valid-feedback">  Looks Valid </div>
                    <div class="invalid-feedback">  Maybe Invalid?  </div>
                </div>
                <div class="mb-3">
                    <label for="description" class= "form-label"  >Details of the listing</label>
                    <textarea class= "form-control" id="description" name="listing[description]"><%= listing.description %></textarea>
                    <div class="valid-feedback">  Looks Valid </div>
                    <div class="invalid-feedback">  Maybe Invalid?  </div>
                </div>
                <div class="mb-3">
                    <label for="currImage" class="form-label">Current Listing Image</label>
                    <img src="<%= imageUrl %>">
                </div>
                <div class="mb-3">
                    <label for="image" class= "form-label"  >Upload New Image </label>
                    <input class= "form-control" id="image" name="listing[image]" type="file">
                </div>
                <div class="mb-3">
                    <label for="price" class= "form-label"  >Price</label>
                    <input required  class= "form-control" id="price"  name="listing[price]" type="number" value = "<%= listing.price %>">  
                    <div class="valid-feedback">  Looks Valid </div>
                    <div class="invalid-feedback">  Maybe Invalid?  </div>
                </div>

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label for="location" class= "form-label"  >Location</label>
                        <input class= "form-control" id="location" name="listing[location]" type="text" value = "<%= listing.location %>"> 
                        <div class="valid-feedback">  Looks Valid </div>
                        <div class="invalid-feedback">  Maybe Invalid?  </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="country" class= "form-label"  >Country</label>
                        <input class= "form-control" id="country" name="listing[country]" type="text" value = "<%= listing.country %>">    
                        <div class="valid-feedback">  Looks Valid </div>
                        <div class="invalid-feedback">  Maybe Invalid?  </div>
                    </div>
                </div>
               
                <br>
                <div class="mb-3">
                    <button class="form-control btn btn-dark w-100 ">Edit this listing</button>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE"></form>
            <div class="col-md-8 offset-md-2 mb-5">
                <button class="form-control btn btn-danger w-100 ">Delete this listing</button>
            </div>
        </form>
    </div>
       
</body>





    
        
   
    